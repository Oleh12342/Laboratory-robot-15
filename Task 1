import pandas as pd

# Словник, створений у лабораторній роботі №6
football_teams = {
    "Команда A": 45,
    "Команда B": 39,
    "Команда C": 42,
    "Команда D": 30,
    "Команда E": 36,
    "Команда F": 33,
    "Команда G": 48,
    "Команда H": 40,
    "Команда I": 27,
    "Команда J": 24
}

# Перетворення словника на DataFrame
football_df = pd.DataFrame(list(football_teams.items()), columns=['Команда', 'Очки'])

# Виведення DataFrame на екран
print(football_df)

# Додавання колонок для прикладу групування
football_df['Група'] = ['Група 1', 'Група 1', 'Група 1', 'Група 2', 'Група 2', 'Група 2', 'Група 3', 'Група 3', 'Група 3', 'Група 3']

# Групування даних за групою та обчислення середніх очок
grouped_df = football_df.groupby('Група')['Очки'].mean().reset_index()

# Виведення результатів групування
print("\nРезультати групування та агрегації:")
print(grouped_df)
